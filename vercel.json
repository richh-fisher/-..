{
  "version": 2,
  "functions": {
    "api/cron/check-transfers.js": {
      "maxDuration": 60
    },
    "api/manual/trigger.js": {
      "maxDuration": 60
    },
    "pages/index.js": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/",
      "dest": "/pages/index.js"
    },
    {
      "src": "/api/cron/check-transfers",
      "dest": "/api/cron/check-transfers.js",
      "methods": ["GET", "POST"]
    },
    {
      "src": "/api/manual/trigger",
      "dest": "/api/manual/trigger.js",
      "methods": ["GET", "POST"]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/check-transfers",
      "schedule": "*/2 * * * *"
    }
  ]
}